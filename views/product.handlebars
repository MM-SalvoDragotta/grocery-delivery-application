<div class="row">
  <div class="col-md-6">
    <form class="form update-form" id="{{id}}">
      <div class="form-group">
        <label for="name">Product Name:</label>
        <input class="form-input" type="text" id="name" value="{{name}}"/>
      </div>
      <div class="form-group">
        <label for="price">Product Price:</label>
        <input class="form-input" type="text" id="price" value="{{price}}"/>
      </div>
      <div class="form-group">
        <label for="stock">Product Stock:</label>
        <input class="form-input" type="text" id="stock" value="{{stock}}"/>
      </div>
      <div class="form-group">
        <p>Current Category : {{category.category_name}}</p>
        <label for="category">Choose a Category:</label>
        <input list="category-type" id="category" name="category" value="{{category.id}}"/>
          <datalist id="category-type">
            {{#each categories as |category|}}
            <option value="{{category.id}}">{{category.category_name}}</option>
            {{/each}}
          </datalist>
      </div>
      <div class="form-check">
        {{#if isSpecial}}
        <input type="checkbox" class="form-check-input" id="special" checked="checked">
        {{else}}
        <input type="checkbox" class="form-check-input" id="special">
        {{/if}}
        <label class="form-check-label" for="special">Special?</label> 
     </div>
      <div class="form-group">
        <label>Upload Product Picture</label>
        <input type="file" class="form-control-file" name="uploaded_file" id="upload-file">         
      </div>  
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Update</button>
      </div>
    </form>
  </div>
</div>
<script src="/js/product.js"></script>
