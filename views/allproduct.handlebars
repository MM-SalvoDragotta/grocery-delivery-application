<div class="row">
<h2 class="col-12">Product Categories</h2>
<div class="col-3 prolist">
  {{!-- <h3>Product By Category</h3> --}}
  <ul class="">
  {{#each categories as |category| }}
    <li class="cat"><a href="/category/{{category.id}}">{{category.category_name}}</a></li>
  {{/each}}
  </ul>
</div>
<div class="row col-9 prolist">
  <h3 class="col-12">All Products</h3>
{{#each products as |product| }}
<div class="col-lg-6">
  <div class="card mb-5">
    <div class="card-header bg-secondary">
        <h5 class="card-title"><a class="text-white" href="/product/{{product.id}}">{{product.name}}</a></h5>
        <h6 class="card-subtitle mb-2 text-light">Price $ {{product.price}}</h6>
    </div>
    <div class="card-body">
        <div class="product-image">        
                {{!-- <img alt='{{product.name}}'  aria-hidden="true" role="presentation" src="/images/1631102544092.jpeg"> --}}
                <img alt="{{product.name}}"  aria-hidden="true" role="presentation" src="{{product.image_url}}">
        </div>
        <p class="card-text">$ {{product.price}}</p>
        <p class="card-text">{{product.stock}} in stock</p>
        <p class="card-text">{{product.category.category_name}}</p>      
    </div>
    {{#if ../logged_in}} <button class="btn btn-sm btn-danger" type="button"  data-delete="{{product.id}}">Delete</button>{{/if}}
  </div>
</div>
{{/each}}
<script src="/js/delete.js"></script>