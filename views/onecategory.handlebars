<div class="row">
<h2 class="col-12">Product Categories</h2>
<div class="col-3 prolist">
  {{!-- <h3>category list</h3> --}}
  <ul class="">
  {{#each categories as |category| }}
  <li class="cat"><a href="/category/{{category.id}}">{{category.category_name}}</a></li>
  {{/each}}
  </ul>
</div>
<div class="row col-9 prolist">
{{#if logged_in}}
  <h3 class="col-lg-6">{{category_name}}</h3>
  <div class="col-lg-6">
    <input class="cate-input" type="text" placeholder="Update Name" id="cate-name" data-cate="{{id}}" />
    <button class="btn btn-sm btn-primary" id="cate-up" type="button">Update</button>
    <button class="btn btn-sm btn-danger" id="cate-del" type="button">Delete</button>
    </div>
{{else}}
  <h3 class="col-12">{{category_name}}</h3>
{{/if}}
{{#if logged_in}}
{{#each products as |product| }}
<div class="col-lg-6">
  <div class="card mb-5">
    <div class="card-header bg-secondary">
        <h5 class="card-title"><a class="text-white" href="/product/{{product.id}}">{{product.name}}</a></h5>
        <h6 class="card-subtitle mb-2 text-light">Price {{product.price}}</h6>
    </div>
    <div class="card-body">
        <p class="card-text">{{product.price}}</p>
        <p class="card-text">{{product.stock}} in stock</p>
        <p class="card-text">{{product.category.category_name}}</p>      
    </div>
    <button class="btn btn-sm btn-danger" type="button"  data-delete="{{product.id}}">Delete</button>
  </div>
</div>
{{/each}}
{{else}}
{{#each products as |product| }}
<div class="col-lg-6">
  <div class="card mb-5">
    <div class="card-header bg-secondary">
        <h5 class="card-title"><a class="text-white" href="/product/{{product.id}}">{{product.name}}</a></h5>
        <h6 class="card-subtitle mb-2 text-light">Price {{product.price}}</h6>
    </div>
    <div class="card-body">
        <p class="card-text">{{product.price}}</p>
        <p class="card-text">{{product.stock}} in stock</p>
        <p class="card-text">{{product.category.category_name}}</p>      
    </div>
  </div>
</div>
{{/each}}
{{/if}} 
</div>
</div>
<script src="/js/delete.js"></script>
<script src="/js/category.js"></script>
