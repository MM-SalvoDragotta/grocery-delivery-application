<div class="row">
  <h2 class="col-12"><a href="/category">Products By Category</a></h2>
  <div class="col-3 prolist">  
    <ul class="">
      {{#each categories as |category| }}
      <li class="cat"><a  href="/category/{{category.id}}">{{category.category_name}}</a></li>
      {{/each}}
    </ul>
  </div>
  <div class="row col-9 prolist">
    {{#if logged_in}}
    <h3 class="col-lg-6">{{category_name}}</h3>
    <div class="col-lg-6 mb-1">
      <input class="cate-input" type="text" placeholder="Update Name" id="cate-name" data-cate="{{id}}" />
      <button class="btn btn-sm btn-primary" id="cate-up" type="button">Update</button>
      <button class="btn btn-sm btn-danger" id="cate-del" type="button">Delete</button>
    </div>
    {{else}}
    <h3 class="col-12">{{category_name}}</h3>
    {{/if}}  
    {{#each products as |product| }}
    <div class="col-lg-6">
      <div class="card mb-5">
        {{#if product.isSpecial}}
        <div class="card-header bg-yellow">      
          <h3 class="text-center text-card-header">SPECIAL</h3> 
        </div>
        {{else}}
        <div class="card-header bg-red">
          <h3 class="text-center text-card">EVERY DAY LOW PRICE</h3> 
        </div>         
        {{/if}}   
        <div class="card-body">
          <div class="product-image">        
            <img alt="{{product.name}}"  aria-hidden="true" role="presentation" src="{{product.image_url}}">
          </div>
          <h4 class="card-title"><a class="text-dark" href="/product/{{product.id}}">{{product.name}}</a></h4> 
          <p><span class="product-pricing-info card-subtitle mb-2 text-light">
              <span class="price-container"></span> 
              <span class="currency-sign"> $ </span>
              <span class="dollar-value"> {{product.price}} </span>
              </span>
          </p>       
          {{#if ../logged_in}}
            <p class="card-text"><span class="text-dark">{{product.stock}}</span> in stock</p>
          {{/if}}            
            {{!-- <p class="card-text">Category : {{product.category.category_name}} </p>  --}}
          {{#if ../logged_in}} 
            <div class="text-center" >
              <button class="btn btn-sm btn-danger" type="button"  data-delete="{{product.id}}">Remove From Database</button>
            </div>        
          {{/if}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
<script src="/js/delete.js"></script>
<script src="/js/category.js"></script>
