<div class="row">
  <div class="col-md-12">
    <h3 class="col-12 text-center" >Add New Product</h3>
    <form class="form create-form" id="{{id}}" action="/profile" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label class = "label-bold" for="name">Product Name:</label>
        <input class="form-input" type="text" id="name"/>
      </div>
      <div class="form-group">
        <label class = "label-bold" for="price">Product Price:</label>
        <input class="form-input" type="text" id="price"/>
      </div>
      <div class="form-group">
        <label class = "label-bold" for="stock">Product Stock:</label>
        <input class="form-input" type="text" id="stock"/>
      </div>
      <div class="form-group">
        <label class = "label-bold" for="category">Choose a Category:</label>
        <input list="category-type" id="category" name="category" value="{{category.id}}"/>
          <datalist id="category-type">
            {{#each categories as |category|}}
            <option value="{{category.id}}">{{category.category_name}}</option>
            {{/each}}
          </datalist>
      </div>
      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="special">
        <label class = "label-bold" class="form-check-label" for="special">On Special?</label>
      </div>
      <div class="form-group">
        <label class = "label-bold">Upload Product Picture</label>
        <input class = "label-bold" type="file" class="form-control-file" name="uploaded_file" id="upload-file">         
      </div> 
      {{!-- <form method="POST" action="/api/upload" enctype="multipart/form-data">
      <div>
        <label>Upload Product Picture</label>
        <input type="file" name="product-file" />
      </div>
      </form> --}}
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Create</button>
      </div>
    </form>
  </div>
</div>
<script src="/js/create.js"></script>
